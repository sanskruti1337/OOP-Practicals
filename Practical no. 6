#include<iostream>
using namespace std;
double division(double a, double b) {
if( b == 0 ) {
throw "Division by zero condition!";
}
else{
return (a/b);
}
}
int main(){
	double a,b;
	cout<<"Enter first number: ";
	cin>>a;
	cout<<"Enter second number: ";
	cin>>b;
	double result;

try {
    result = division (a,b);
    cout<<"Result :"<<result<<endl;
} catch( const char* e ) {
	cout << e << endl; 
	cout<< "The denominator is zero so division is not possible."<<endl;
	cout<<"Enter a non- zero value:” ;
	cin>>b;
	  if (b != 0) {
            result = division(a, b);  
            cout << "New result: " << result << endl; 
        } else {
            cout << "Error: Division by zero still occurs!" << endl;
        }
    }

    return 0;
}
